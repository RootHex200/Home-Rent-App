<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.DetailsActivity">
<!--    header image-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/details_image"
                    app:shapeAppearanceOverlay="@style/roundImageview"
                    android:scaleType="fitXY"
                    android:src="@drawable/house5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/back_arrow"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/gray_deep_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bookmark"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/gray_deep_color"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/bookmark"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/house_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="100dp"
                    android:text="Dreamsville House"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/house_name_subtitle"
                    android:layout_marginBottom="70dp"
                    android:textSize="20dp"
                    android:text="Ji Sultan Iskandar Muda"
                    android:textColor="@color/white"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:backgroundTint="@color/gray_deep_color"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_gravity="center"

                            android:src="@drawable/bed"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="4dp"
                        android:layout_height="0dp"/>
                    <TextView

                        android:layout_gravity="center"
                        android:id="@+id/house_bedroom"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:text="6 Bedroom"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="0dp"/>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:backgroundTint="@color/gray_deep_color"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_gravity="center"

                            android:src="@drawable/bathroom"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="4dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/house_bathroom"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:text="6 Bathroom"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/house_details"
                android:textColor="@color/secondary_text_color"
                android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="50dp"
                    android:backgroundTint="@color/gray_deep_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/owner_image"
                        android:src="@drawable/person"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        />
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="30dp"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:orientation="vertical"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/owner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Garry Allen"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <Space
                    android:layout_width="70dp"
                    android:layout_height="0dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/call_owner"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/blue_opacity"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/call"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/message_owner"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/blue_opacity"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/message"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="Gallery"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="20dp"
                android:id="@+id/gallery_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <androidx.fragment.app.FragmentContainerView

                android:id="@+id/map_view_container"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/house_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 2500,000.00 / Year"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rent_now_btn"
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Rent Now"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_shape"
                    android:padding="50dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>