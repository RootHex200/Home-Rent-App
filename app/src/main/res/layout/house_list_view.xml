<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_width="300dp"
    android:layout_height="320dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/house_image"
        app:shapeAppearanceOverlay="@style/roundImageview"
        android:scaleType="fitXY"
        android:src="@drawable/house5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        android:backgroundTint="#8a9c9a"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="4dp"
                android:src="@drawable/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/house_distance"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.8 km"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:visibility="visible" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="50dp"
        android:text="Dreamsville House"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/house_name_subtitle"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:text="Ji Sultan Iskandar Muda"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>

