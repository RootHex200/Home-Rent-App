<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/best_house_view"
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/best_house_image"
    android:scaleType="fitXY"
    app:shapeAppearanceOverlay="@style/best_place_round_image"
    android:src="@drawable/house5"
    android:layout_width="80dp"
    android:layout_height="80dp"/>
<Space
    android:layout_width="20dp"
    android:layout_height="0dp"/>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/best_house_name"
        android:text="Orchad House"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="5dp"/>
    <TextView
        android:id="@+id/best_house_bill"
        android:text="Rp.2,500,000.000 / Year"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/blue_drawer_bg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="4dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/best_house_bedroom"
            android:textSize="16dp"
            android:textColor="@color/secondary_text_color"
            android:text="6 Bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="5dp"
            android:layout_height="0dp"/>
        <ImageView
            android:src="@drawable/bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="4dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/best_house_bathroom"
            android:textSize="16dp"
            android:textColor="@color/secondary_text_color"
            android:text="6 Bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>